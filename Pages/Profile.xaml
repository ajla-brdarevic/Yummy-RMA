<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:Yummy.CustomControls"
             x:Class="Yummy.Pages.Profile"
             Title="Profile"
             BackgroundColor="#FFF5E4"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout>

            <customControls:CalendarView/>

            <StackLayout>
                
                <Label x:Name="LabelNaslov"
               Text="Naslov"
               FontSize="Large"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand" />
                <Label x:Name="LabelKratkiOpis"
               Text="KratkiOpis"
               FontSize="Large"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand" />
                
            </StackLayout>
         
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>